


@model Category;

@{
    ViewBag.pageTitel = "Categories Managment";
    ViewBag.CardTitel = "Ceate Categories";
    Layout = "~/Views/Shared/_Dashporde.cshtml";
}
<!DOCTYPE html>
<html>
<body>


    <form method="post" action=" /Admin/Category/SaveCategory">

        <label for="CategoryName"> CategoryName</label><br>
        <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control"><br>

        <label for="CategoryTime">CategoryTime</label><br>
        <input type="datetime" name="CategoryTime" value="@Model.CategoryTime" class="form-control"><br><br>

        <label for="Description">Description</label><br>
        <input type="text" name="Description" value="@Model.Description" class="form-control"><br><br>



        <input type="submit" value="add" class="btn btn-success" />

    </form>
 
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>

