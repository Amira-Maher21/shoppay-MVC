@model List<product>
@{
    ViewBag.pageTitel = "product Managment";
    ViewBag.CardTitel = " Edite product";
    Layout = "~/Views/Shared/_Dashporde.cshtml";
}
 <html>
<head>
    <meta charset="utf-8" />

     <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
   
    
    <script>

        
        jQuery(document).ready(function ($) {
            $('#mytable').DataTable({
                "ajax": {
                    "url": "/Admin/Product/getdata",
                    "dataType": "json",
                    "type": "GET"
                },
                "columns": [
                    { "data": "productName" },
                    { "data": "productDescription" },
                    { "data": "price" },
                    { "data": "category.categoryName" },
                    {
                        "data": "productId",
                        "render": function (data) {
                            return `
                                <a href="/Admin/Product/Edit/${data}" class="btn btn-success">Edit</a>
                                <a onclick=DeleteItem("/Admin/Product/Delete/${data}") class="btn btn-danger">Delete</a>
                                    `;
                        }
                    

                    }
                ]
            });
        });
    </script>

</head>

<body>
    <div>
        <a class="btn btn-primary" href="/Admin/Product/ViewCreate">Create</a>
    </div>

    <table id="mytable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Description</th>
                <th>Price</th>
                 <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
       
    </table>
</body>

</html>



<script>
    function DeleteItem (url) {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
            url:url,
            type:"Delete",
                    success: function (data) {
                        if (data.success) {
                            location.reload();
                            toaster.success(data.message);
                            
                        }
                        else {
                            toaster.error(data.message)
                        }
                    }
                })
                Swal.fire({
                    title: "Deleted!",
                    text: "Your file has been deleted.",
                    icon: "success"
                });
            }
        });
      
    }
</script>


