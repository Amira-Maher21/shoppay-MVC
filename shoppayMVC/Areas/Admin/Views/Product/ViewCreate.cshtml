@model ProductDto;

@{
    ViewBag.pageTitel = "product Managment";
    ViewBag.CardTitel = "Ceate Categories";
    Layout = "~/Views/Shared/_Dashporde.cshtml";
}
<!DOCTYPE html>
<html>
<body>

    
     
            <div class="row">

                <div class="col-md-4">

            <form asp-action="ViewCreate" method="post" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group" hidden>

                    <label asp-for="product.productId" class="control-label"></label>

                    <input asp-for="product.productId" class="form-control" />

                    <span asp-validation-for="product.productId" class="text-danger"></span>

                </div>


                        <div class="form-group">

                            <label asp-for="product.productName" class="control-label"></label>

                    <input asp-for="product.productName" class="form-control" />

                    <span asp-validation-for="product.productName" class="text-danger"></span>

                        </div>

                        <div class="form-group">

                    <label asp-for="product.productDescription" class="control-label"></label>

                    <input asp-for="product.productDescription" class="form-control" />

                         <span asp-validation for="productDescription" class="text-danger"></span>

                        </div>

                        <div class="form-group">

                    <label asp-for="product.price" class="control-label"></label>

                    <input asp-for="product.price" class="form-control" />

                    <span asp-validation-for="product.price" class="text-danger"></span>
                      </div>

                    <div class="form-group">

                    <label asp-for="product.Image" class="control-label"></label>

                    <input type="file" name="file" id="file" class="form-control" />

                    </div>

                        <div class="form-group">

                    <label asp-for="product.CategoryId" class="control-label"></label>

                    <select asp-for="product.CategoryId" class="form-control" asp-items="Model.CategoryList">
                        <option disabled selected>Select Category</option>
                    </select>

                    <span asp-validation-for="product.price" class="text-danger"></span>
                         </div>

                        <div class="form-group">
                    <input type="submit" value="ViewCreate" class="btn btn-primary" />
                        </div>

                    </form>

                    </div>
               </div>

            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
}

</body>
</html>

